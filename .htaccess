# Habilitar el módulo de reescritura
RewriteEngine On

# Establecer la base del directorio
RewriteBase /

# Redirigir a HTTPS (descomentar en producción)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Si el archivo o directorio existe, no reescribir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Permitir acceso a archivos públicos
RewriteRule ^public/(.*)$ public/$1 [L]

# Redirigir todo lo demás al index.php
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]

# Configuración de seguridad
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Deshabilitar listado de directorios
Options -Indexes

# Configurar cabeceras de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
