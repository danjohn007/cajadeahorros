# Habilitar el módulo de reescritura
RewriteEngine On

# Establecer la base del directorio dinámicamente
# Si está en una subcarpeta, ajustar RewriteBase según corresponda
# Para instalación en raíz: RewriteBase /
# Para subcarpeta: RewriteBase /nombre-subcarpeta/
# La configuración predeterminada detecta automáticamente

# Si el archivo existe, servirlo directamente
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Si el directorio existe, servirlo directamente
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirigir todo lo demás al index.php
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Redirigir a HTTPS (descomentar en producción)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Configuración de seguridad
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Deshabilitar listado de directorios
Options -Indexes

# Configurar cabeceras de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
